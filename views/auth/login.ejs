<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/form-director.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <h1>Login</h1>
        <%if(errorMessage){%>
        <%- include('../includes/error-box.ejs') %>
        <% } %>
        <form class="movie_form" action="/login" method="POST" novalidate>
            <div class="form_control">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        <a class="underline_link" href="/reset" class="<%= path=='/reset'?'active':'' %>">Reset password</a>
    </main>
</body>

</html>