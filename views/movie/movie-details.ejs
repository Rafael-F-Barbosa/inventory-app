<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/movies.css">
<link rel="stylesheet" href="/stylesheets/modal.css">

</head>
<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <div class="movie_detailed modal-on">
            <div><h1><%= movie.title %> </h1></div>
            <img src="<%=movie.movieUrl%>" alt="<%= movie.title %>">
            <div>Director: <%= movie.directorName %></div>
            <div>Year: <%= movie.year %> </div>
            <% if (isLoggedIn) { %>
            <div class="buttons">
                <form action="/add-to-watched/" method="post">
                    <input type="hidden" name="movieId" value="<%=movie._id%>">
                    <button type="submit">Add to watched</button>
                </form>
                <form action="/add-to-wish/" method="post">
                    <input type="hidden" name="movieId" value="<%=movie._id%>">
                    <button type="submit">Add to wish</button>
                </form>
            </div>
            <% } %>
        </div>
        <div id="modal" class="modal-container hide-modal">
            <div class="modal-content">
                <%= modalMessage %>
            </div>
        </div>
    </main>
</body>
</html>