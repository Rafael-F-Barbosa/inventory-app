<header class="main_header">
    <div class="inner_header">

        <div class="logo_container">
            <a href="/"><h1>My <span>movies</span></h1></a>
        </div>

        <ul class="navigation">
            <a href="/movies">
                <li class="<%= path=='/movies'?'active':'' %>">Movies
                </li>
            </a>
            <a href="/directors">
                <li class="<%= path=='/directors'?'active':'' %>">Directors
                </li>
            </a>
            <% if (!isLoggedIn) { %>
                <a href="/login">
                    <li class="<%= path=='/login'?'active':'' %>">Login</li>
                </a>
                <a href="/sign-up">
                    <li class="<%= path=='/sign-up'?'active':'' %>">Sign up</li>
                </a>
                <% } 
            else{ %>
                <a href="/watched-movies">
                    <li class="<%= path=='/watched-movies'?'active':'' %>">Watched</li>
                </a>
                <a href="/wish-list">
                    <li class="<%= path=='/wish-list'?'active':'' %>">Wish</li>
                </a>
                <a href="/movies/add">
                    <li class="<%= path=='/movies/add'?'active':'' %>">Add m</li>
                </a>
                <a href="/directors/add">
                    <li class="<%= path=='/directors/add'?'active':'' %>">Add d</li>
                </a>
                <a href="">
                    <li>
                        <form action="/logout" method="post">
                            <button class="nav_button">Logout</button>
                        </form>
                    </li>
                </a>
            <% } %>
        </ul>

    </div>
</header>