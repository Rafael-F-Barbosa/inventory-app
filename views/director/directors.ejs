<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/directors.css">
</head>
<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <h1><%= pageTitle %></h1>           
        <div class="directors_grid">
            <% if (directors.length) { %>
                <% directors.forEach(director => { %>
                    <div class="card card_director">
                        <div><%= director.name %> </div>
                            <div>
                                <a href="/directors/director-details/<%= director._id%>">
                                    <img src="<%= director.image %>" alt="<%= director.name %>">
                                </a>
                            </div>
                        <div>Born: <%= director.birthYear %> </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1>No directors to show</h1>
            <% } %>
        </div>
    </main>
    <%- include('../includes/pagination.ejs') %>
</body>
</html>