<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/directors.css">

</head>
<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <div class="director_details">
            <div><h1><%= director.name %></h1></div>
            <div>
                <img src="<%= director.image %>" alt="<%= director.name %>">
            </div>
            <div>Born in <%= director.birthYear %> </div>
        </div>
        <div class="movies">
            <h1>Movies</h1>
            <div class="movies_grid">
                <% if (director.movies.length) { %>
                    <% director.movies.forEach(movie => { %>
                        <div class="card">
                            <div><%= movie.title %> </div>
                            <div>
                                <a href="/movies/movie-details/<%= movie._id%>">
                                    <img src="<%= movie.movieUrl %>" alt="<%= movie.title %>">
                                </a>
                            </div>
                            <div>Year: <%= movie.year %> </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h1>No movies to show</h1>
                <% } %>
            </div>
        </div>
    </main>
</body>
</html>